<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weiziplus.springboot.mapper.system.SysRoleMapper">
    <select id="getInfoByUserId" resultType="com.weiziplus.springboot.models.SysRole">
        SELECT sr.*
        FROM sys_role sr,sys_user su
        WHERE su.id = #{userId} AND sr.id = su.role_id
        LIMIT 1
    </select>
    <select id="getRoleListByParentId" resultType="com.weiziplus.springboot.models.SysRole">
        SELECT *
        FROM sys_role
        WHERE parent_id = #{parentId}
        ORDER BY sort ASC,parent_id ASC
    </select>
    <select id="getRoleInfoByName" resultType="com.weiziplus.springboot.models.SysRole">
        SELECT *
        FROM sys_role
        WHERE name = #{name}
        LIMIT 1
    </select>
    <update id="changeRoleIsStopByIdAndIsStop">
        UPDATE sys_role
        SET is_stop = #{isStop}
        WHERE id = #{id}
    </update>
    <select id="getInfoByRoleId" resultType="com.weiziplus.springboot.models.SysRole">
        SELECT *
        FROM sys_role
        WHERE id = #{id}
    </select>
    <select id="getRoleList" resultType="com.weiziplus.springboot.models.SysRole">
        SELECT *
        FROM sys_role
        ORDER BY sort ASC,parent_id ASC
    </select>
</mapper>