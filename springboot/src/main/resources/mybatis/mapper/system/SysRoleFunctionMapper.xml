<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weiziplus.springboot.mapper.system.SysRoleFunctionMapper">
    <delete id="deleteByRoleId">
        DELETE FROM sys_role_function
        WHERE role_id = #{roleId}
    </delete>
    <insert id="addRoleFunction">
        INSERT INTO sys_role_function
        (role_id,function_id)
        values
        <foreach collection="funIds" item="funId" index="index" separator=",">
            (#{roleId},#{funId})
        </foreach>
    </insert>
</mapper>